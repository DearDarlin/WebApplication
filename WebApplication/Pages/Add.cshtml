@page
@model WebApplication.Pages.AddModel
@{
    ViewData["Title"] = "Add";
}

<div class="container py-4">

    <h2 class="mb-4 text-primary">
        <i class="bi bi-journal-plus"></i> Add New Items
    </h2>

    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            @Model.Message
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row g-4">
   
        <div class="col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Add Author</h5>
                </div>

                <div class="card-body">
                    <form method="post" asp-page-handler="AddAuthor">
                        <div class="mb-3">
                            <label class="form-label">First Name *</label>
                            <input asp-for="NewAuthor.FirstName" class="form-control" required minlength="2" placeholder="Enter first name" />
                            <span asp-validation-for="NewAuthor.FirstName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Last Name *</label>
                            <input asp-for="NewAuthor.LastName" class="form-control" required minlength="2" placeholder="Enter last name" />
                            <span asp-validation-for="NewAuthor.LastName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Birth Date *</label>
                            <input asp-for="NewAuthor.BirthDate" type="date" class="form-control" required />
                            <span asp-validation-for="NewAuthor.BirthDate" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-person-plus"></i> Save Author
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>


        <div class="col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">Add Book</h5>
                </div>

                <div class="card-body">
                    <form method="post" asp-page-handler="AddBook">
                        <div class="mb-3">
                            <label class="form-label">Title *</label>
                            <input asp-for="NewBook.Title" class="form-control" required minlength="2" placeholder="Book title" />
                            <span asp-validation-for="NewBook.Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Number of Book (ISBN) *</label>
                            <input asp-for="NewBook.ISBN" id="isbn-input" class="form-control" required
                                   placeholder="978-XXXXXXXXXX" maxlength="14" pattern="978-\d{10}" />
                            <span asp-validation-for="NewBook.ISBN" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Publish Year *</label>
                                <input asp-for="NewBook.PublishYear" type="number" class="form-control"
                                       required min="1450" max="2026" step="1" placeholder="YYYY" />
                                <span asp-validation-for="NewBook.PublishYear" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label">Price *</label>
                                <input asp-for="NewBook.Price" type="number" step="0.01" class="form-control" required max="1000" />
                                <span asp-validation-for="NewBook.Price" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Author *</label>
                            <select asp-for="NewBook.AuthorId" class="form-select" required>
                                <option value="">- Select Author -</option>
                                @if (Model.AuthorsList != null)
                                {
                                    @foreach (var author in Model.AuthorsList)
                                    {
                                        <option value="@author.Id">@author.FirstName @author.LastName</option>
                                    }
                                }
                            </select>
                            <span asp-validation-for="NewBook.AuthorId" class="text-danger"></span>
                        </div>

                        

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-bookmark-plus"></i> Save Book
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        input[type=number]::-webkit-inner-spin-button,
        input[type=number]::-webkit-outer-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }

        input[type=number] {
            -moz-appearance: textfield;
        }
    </style>
    <script>
        document.getElementById('isbn-input').addEventListener('input', function (e) {
            let digits = e.target.value.replace(/\D/g, '');

            if (digits.length > 0 && !digits.startsWith('978')) {
                digits = '978' + digits;
            }

            if (digits.length > 13) digits = digits.substring(0, 13);

            let formatted = digits;
            if (digits.length > 3) {
                formatted = digits.slice(0, 3) + '-' + digits.slice(3);
            }

            e.target.value = formatted;
        });
    </script>
    <partial name="_ValidationScriptsPartial" />
}