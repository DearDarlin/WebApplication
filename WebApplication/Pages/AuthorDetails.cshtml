@page "{id:int}"
@model WebApplication.Pages.AuthorDetailsModel
@{
    ViewData["Title"] = "Деталі автора";
}

<div class="container mt-4">
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h2 class="mb-0">Інформація про автора</h2>
            <a asp-page="/Library" class="btn btn-light btn-sm">Back to Library</a>
        </div>
        <div class="card-body">
            <h4>@Model.Author.FirstName @Model.Author.LastName</h4>
            <p><strong>Дата народження:</strong> @Model.Author.BirthDate.ToLongDateString()</p>
        </div>
    </div>

    <h3>Список книг</h3>
    <hr />

    @if (Model.AuthorBooks != null && Model.AuthorBooks.Any())
    {
        <table class="table table-hover mt-3">
            <thead class="table-light">
                <tr>
                    <th>Назва книги</th>
                    <th>Рік видання</th>
                    <th>Ціна</th>
                    <th>Дії</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var book in Model.AuthorBooks)
                {
                    <tr>
                        <td>@book.Title</td>
                        <td>@book.PublishYear</td>
                        <td>$@book.Price?.ToString("F2")</td>
                        <td>
                            <a asp-page="/EditBook" asp-route-id="@book.Id" class="btn btn-sm btn-warning">
                                Edit Book
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info shadow-sm" role="alert">
            <strong>У цього автора поки немає книг.</strong>
        </div>
    }
</div>