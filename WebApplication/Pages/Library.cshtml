@page
@model WebApplication.Pages.LibraryModel
@{
    ViewData["Title"] = "Library";
}

@if (Model.Message != null)
{
    <div class="alert alert-info alert-dismissible fade show" role="alert">
        @Model.Message
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<h2 class="mb-4 text-primary">
    <i class="bi bi-collection"></i> Library
</h2>

<div class="card shadow-sm mb-4">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Authors</h5>
    </div>

    <div class="card-body p-0">
        <table class="table table-hover mb-0">
            <thead class="table-light">
                <tr>
                    <th>Name</th>
                    <th>Born</th>
                    <th>Books Count</th>
                    <th>Details</th>
                    <th>Delete</th>
                    <th>Edit</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var author in Model.Model.Authors)
                {
                    <tr>
                        <td>
                            <strong>@author.FirstName @author.LastName</strong>
                        </td>
                        <td>@author.BirthDate.ToShortDateString()</td>
                        
                        <td>
                            <span class="badge bg-secondary">@author.Books.Count</span>
                        </td>
                        <td>
                            <a asp-page="/AuthorDetails" asp-route-id="@author.Id" title="View Details" class="text-decoration-none">
                                👁️
                            </a>
                        </td>
                        <td>
                            <form method="post" asp-page-handler="DeleteAuthor">
                                <input type="hidden" name="id" value="@author.Id" />
                                <button type="submit">🗑️</button>
                            </form>
                        </td>
                        <td>
                            <a asp-page="/EditAuthor" asp-route-id="@author.Id" class="text-decoration-none">
                                ✏️
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="container py-4">
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-light">
            <strong>Search & Filters</strong>
        </div>

        <div class="card-body">
            <form method="get" class="row g-2 align-items-end">
                <div class="col-md-3">
                    <label class="form-label">Title</label>
                    <input asp-for="Model.SearchTitle" class="form-control" placeholder="Search title..." />
                </div>

                <div class="col-md-2">
                    <label class="form-label">Publish Year</label>
                    <input asp-for="Model.SearchYear" type="number" class="form-control" placeholder="YYYY" />
                </div>

                <div class="col-md-3">
                    <label class="form-label">Sort by</label>
                    <select asp-for="Model.SortOrder" class="form-select">
                        <option value="year_asc">Old</option>
                        <option value="year_desc">New</option>
                        <option value="title_asc">Title A–Z</option>
                        <option value="title_desc">Title Z–A</option>
                    </select>
                </div>

                <div class="col-md-3 d-grid">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-funnel"></i> Filter
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-success text-white">
            <h5 class="mb-0">Books</h5>
        </div>

        <div class="card-body p-0">
            @if (Model.Model.Books == null || Model.Model.Books.Count == 0)
            {
                <div class="p-4 text-center text-muted">
                    <i class="bi bi-emoji-frown"></i> No books found.
                </div>
            }
            else
            {
                <table class="table table-striped table-hover mb-0">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>ISBN</th>
                            <th>Year</th>
                            <th>Author</th>
                            <th>Price</th>
                            <th>Delete</th>
                            <th>Edit</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var book in Model.Model.Books)
                        {
                            <tr>
                                <td><strong>@book.Title</strong></td>
                                <td>@book.ISBN</td>
                                <td>@book.PublishYear</td>
                                <td>@book.Author?.FirstName @book.Author?.LastName</td>
                                <td>@(book.Price.HasValue ? $"${book.Price.Value:F2}" : "-")</td>
                                <td>
                                    <form method="post" asp-page-handler="DeleteBook" asp-route-id="@book.Id">
                                        <button type="submit">
                                            🗑️
                                        </button>
                                    </form>
                                </td>
                                <td>
                                    <a asp-page="/EditBook" asp-route-id="@book.Id" class="text-decoration-none">
                                        ✏️
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>