@page "/Books/Edit/{id:int}"
@model WebApplication.Pages.EditBookModel
@{
}


<div class="container mt-4">
    @if (Model.Book == null)
    {
        <div>
            <h3>NotFound</h3>
            <a asp-page="Library">Back to Library</a>
        </div>
    }
    else
    {
        <h2>Edit Book</h2>

        @if (!string.IsNullOrEmpty(Model.StatusMessage))
        {
            <div class="alert alert-success">
                @Model.StatusMessage <a asp-page="Library">Back to list</a>
            </div>
        }
    
    <form method="post" class="card p-4 shadow-sm">
        <input type="hidden" asp-for="Book.Id" />

        <div class="mb-3">
            <label class="form-label">ISBN</label>
            <input asp-for="Book.ISBN" class="form-control" readonly />
        </div>

        <div class="mb-3">
            <label class="form-label">Title</label>
            <input asp-for="Book.Title" class="form-control" required />
            <span asp-validation-for="Book.Title" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Publish Year</label>
            <input asp-for="Book.PublishYear" type="number" class="form-control" />
            <span asp-validation-for="Book.PublishYear" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Price</label>
            <input asp-for="Book.Price" type="number" step="0.01" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Author</label>
            <select asp-for="Book.AuthorId" asp-items="Model.AuthorSelectList" class="form-select">
                <option value="">-- Select Author --</option>
            </select>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a asp-page="Library" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
    }
</div>